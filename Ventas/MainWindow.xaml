        <DatePicker x:Name="dpFinal" HorizontalAlignment="Left" Margin="283,12,0,0" VerticalAlignment="Top" SelectedDate="2017-09-30"/>
        <Button x:Name="btnComision" Content="Comisiones" HorizontalAlignment="Left" Margin="635,16,0,0" VerticalAlignment="Top" Click="btnComision_Click"/>
        <Button Content="Nuevo Pedido" HorizontalAlignment="Left" Margin="100,386,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
